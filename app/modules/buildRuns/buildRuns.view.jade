div(ng-controller='BuildRunsController as ctrl')
  ul.cci-br-ul
    li.cci-br-li(class='cci-br-header')
      .cci-br-common-header
        div Changelist
        div Owner
        div Time Started
        div Build
        div Unit Test
        div Functional Test
      .cci-br-status-header
        div Status
    li.cci-br-li(build-run-li='', ng-repeat='(key, buildRun) in runs', build-run='buildRun', ng-class='getStatusClassLi(buildRun.status.code)', ng-click='ctrl.expand(buildRun)')
